{% load i18n bb_ember static %}

{% tplhandlebars "monthly_donation_project" %}

    {{#linkTo 'project' project class="project-header" }}
        <figure class="project-image">
            <img {{bindAttr src="project.plan.image" alt="project.title"}} />
        </figure>
        <h2 class="project-title">
            {{ project.title }}
            <em class="project-location">
                <span class="flaticon solid location-pin-1"></span> {{ project.country.name }}
            </em>
        </h2>
    {{/linkTo}}

    <div class="fund-amount">
        <strong class="fund-amount-needed">&euro; {{ project.amount_needed }}</strong> {% trans "is still needed"%}

        <div class="fund-amount-divided">
            {{#each error in errors.amount}}
                <span class="has-errors">{{ error }}</span>
            {{/each}}
        </div>
    </div>

    <a {{ action "deleteProject" this target="view" }} class="manage-delete"><span class="flaticon solid x-2"></span> <strong>{% trans "Delete" %}</strong></a></li>

{% endtplhandlebars %}
